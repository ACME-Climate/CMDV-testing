# makex
echo "Enter 1 to do    make clean     ; make"
echo "Enter 2 to do    source cleanx  ; make"
echo "Enter 3 to do    source cleany  ; make"
echo "Enter 4 to do    rm driver.*    ; make"
echo "Enter 5 to do    rm driver.* *amicphys*    ; make"
set iflagaa = $<

/bin/rm dd.x

if ($iflagaa == 1) then
   echo "doing:  make clean"
   make clean
   echo "doing:  make"
   make
else if ($iflagaa == 2) then
   echo "doing:  source cleanx"
   source cleanx
   echo "doing:  make"
   make
else if ($iflagaa == 3) then
   echo "doing:  source cleany"
   source cleany
   echo "doing:  make"
   make
else if ($iflagaa == 4) then
   echo "doing:  /bin/rm driver.f90 driver.o driver.mod"
   /bin/rm driver.f90 driver.o driver.mod
   echo "doing:  make"
   make
else if ($iflagaa == 5) then
   echo "doing:  /bin/rm driver.f90 driver.o driver.mod"
   /bin/rm driver.f90 driver.o driver.mod
   echo "doing:  /bin/rm modal_aero_amicphys.f90 modal_aero_amicphys.o modal_aero_amicphys.mod"
   /bin/rm modal_aero_amicphys.f90 modal_aero_amicphys.o modal_aero_amicphys.mod
   echo "doing:  make"
   make
else
   echo "*** bad value - try again"
endif

unset verbose
